<odoo>
    <data noupdate="0">
        <!-- Sales Rep Security Groups -->
        <record id="group_sales_rep_user" model="res.groups">
            <field name="name">Sales Representatives / User</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Basic access to sales representative features</field>
        </record>

        <record id="group_sales_rep_manager" model="res.groups">
            <field name="name">Sales Representatives / Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_sales_rep_user')), (4, ref('sales_team.group_sale_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Full access to sales representative management</field>
        </record>

        <record id="group_sales_rep_analytics" model="res.groups">
            <field name="name">Sales Representatives / Analytics</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_sales_rep_user'))]"/>
            <field name="comment">Access to sales analytics and reporting</field>
        </record>

        <record id="group_sales_rep_territory" model="res.groups">
            <field name="name">Sales Representatives / Territory Management</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_sales_rep_user'))]"/>
            <field name="comment">Access to territory assignment and management</field>
        </record>

        <!-- Multi-company rules -->
        <record id="sales_rep_comp_rule" model="ir.rule">
            <field name="name">Sales Representative multi-company</field>
            <field name="model_id" ref="model_sales_rep"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="sales_rep_assignment_comp_rule" model="ir.rule">
            <field name="name">Sales Rep Assignment multi-company</field>
            <field name="model_id" ref="model_sales_rep_assignment"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="commission_scheme_comp_rule" model="ir.rule">
            <field name="name">Commission Scheme multi-company</field>
            <field name="model_id" ref="model_commission_scheme"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="geo_node_comp_rule" model="ir.rule">
            <field name="name">Geographic Node multi-company</field>
            <field name="model_id" ref="model_geo_node"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>