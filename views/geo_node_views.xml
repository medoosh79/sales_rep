<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Geographic Node Form View -->
    <record id="view_geo_node_form" model="ir.ui.view">
        <field name="name">geo.node.form</field>
        <field name="model">geo.node</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_assignments" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="assignment_count" widget="statinfo" string="Assignments"/>
                        </button>
                        <button name="action_view_partners" type="object" class="oe_stat_button" icon="fa-handshake-o">
                            <field name="partner_count" widget="statinfo" string="Partners"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Name"/></h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2><field name="code" placeholder="Code"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="parent_id" domain="[('id', '!=', id)]"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="complete_name" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Child Nodes" name="child_nodes">
                            <field name="child_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="type"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Add description here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Geographic Node Tree View -->
    <record id="view_geo_node_tree" model="ir.ui.view">
        <field name="name">geo.node.tree</field>
        <field name="model">geo.node</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="parent_id"/>
                <field name="assignment_count"/>
                <field name="partner_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Geographic Node Search View -->
    <record id="view_geo_node_search" model="ir.ui.view">
        <field name="name">geo.node.search</field>
        <field name="model">geo.node</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Geographic Node" filter_domain="['|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('complete_name', 'ilike', self)]"/>
                <field name="parent_id"/>
                <filter string="Countries" name="countries" domain="[('type', '=', 'country')]"/>
                <filter string="Regions" name="regions" domain="[('type', '=', 'region')]"/>
                <filter string="Governorates" name="governorates" domain="[('type', '=', 'governorate')]"/>
                <filter string="Cities" name="cities" domain="[('type', '=', 'city')]"/>
                <filter string="Districts" name="districts" domain="[('type', '=', 'district')]"/>
                <filter string="Zones" name="zones" domain="[('type', '=', 'zone')]"/>
                <filter string="Neighborhoods" name="neighborhoods" domain="[('type', '=', 'neighborhood')]"/>
                <filter string="Blocks" name="blocks" domain="[('type', '=', 'block')]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="Parent Node" name="parent" domain="[]" context="{'group_by': 'parent_id'}"/>
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Geographic Node Action Window -->
    <record id="action_geo_node" model="ir.actions.act_window">
        <field name="name">Geographic Areas</field>
        <field name="res_model">geo.node</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_geo_node_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first geographic node
            </p>
            <p>
                Define your comprehensive geographic hierarchy from countries down to blocks/streets.
                Hierarchy: Country → Region/State → Governorate/Province → City → District → Zone → Neighborhood → Block/Street
            </p>
        </field>
    </record>

    <!-- Geographic Node Menu -->
    <menuitem id="menu_geo_node" name="Geographic Areas" 
              parent="menu_sales_rep_root" 
              action="action_geo_node" 
              sequence="40"/>
</odoo>