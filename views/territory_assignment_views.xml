<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Territory Assignment Form View -->
    <record id="view_territory_assignment_form" model="ir.ui.view">
        <field name="name">territory.assignment.form</field>
        <field name="model">territory.assignment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_child_coverages" type="object" 
                            string="Create Child Assignments" class="btn-primary"
                            confirm="This will create assignments for all child areas. Continue?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cube">
                            <field name="product_count" widget="statinfo" string="Products"/>
                        </button>
                        <button name="action_view_child_areas" type="object" class="oe_stat_button" icon="fa-map-marker">
                            <field name="child_areas_count" widget="statinfo" string="Child Areas"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="display_name" class="oe_edit_only"/>
                        <h1><field name="display_name" placeholder="Assignment Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_line_id" options="{'no_create': True}"/>
                            <field name="geo_node_id" options="{'no_create': True}"/>
                            <field name="sales_rep_id" options="{'no_create': True}"/>
                            <field name="coverage_type"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Commission &amp; Targets" name="commission_targets">
                            <group>
                                <group string="Commission">
                                    <field name="commission_rate" widget="percentage"/>
                                </group>
                                <group string="Targets">
                                    <field name="monthly_target" widget="monetary"/>
                                    <field name="quarterly_target" widget="monetary"/>
                                    <field name="yearly_target" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes about this coverage..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Territory Assignment Tree View -->
    <record id="view_territory_assignment_tree" model="ir.ui.view">
        <field name="name">territory.assignment.tree</field>
        <field name="model">territory.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="product_line_id"/>
                <field name="geo_node_id"/>
                <field name="sales_rep_id"/>
                <field name="coverage_type"/>
                <field name="priority" widget="priority"/>
                <field name="commission_rate" widget="percentage"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="product_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Territory Assignment Kanban View -->
    <record id="view_territory_assignment_kanban" model="ir.ui.view">
        <field name="name">territory.assignment.kanban</field>
        <field name="model">territory.assignment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="coverage_type">
                <field name="id"/>
                <field name="display_name"/>
                <field name="product_line_id"/>
                <field name="geo_node_id"/>
                <field name="sales_rep_id"/>
                <field name="coverage_type"/>
                <field name="priority"/>
                <field name="commission_rate"/>
                <field name="product_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <i class="fa fa-cube"/> <field name="product_line_id"/>
                                        </div>
                                        <div class="col-6">
                                            <i class="fa fa-map-marker"/> <field name="geo_node_id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2" t-if="record.sales_rep_id.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-user"/> <field name="sales_rep_id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2" t-if="record.commission_rate.raw_value">
                                        <div class="col-12">
                                            <i class="fa fa-percent"/> Commission: <field name="commission_rate"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-info">
                                            <field name="product_count"/> Products
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Territory Assignment Search View -->
    <record id="view_territory_assignment_search" model="ir.ui.view">
        <field name="name">territory.assignment.search</field>
        <field name="model">territory.assignment</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name" string="Assignment" 
                       filter_domain="['|', '|', ('display_name', 'ilike', self), ('product_line_id', 'ilike', self), ('geo_node_id', 'ilike', self)]"/>
                <field name="product_line_id"/>
                <field name="geo_node_id"/>
                <field name="sales_rep_id"/>
                <separator/>
                <filter string="Exclusive" name="exclusive" domain="[('coverage_type', '=', 'exclusive')]"/>
                <filter string="Shared" name="shared" domain="[('coverage_type', '=', 'shared')]"/>
                <filter string="Backup" name="backup" domain="[('coverage_type', '=', 'backup')]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['3', '4'])]"/>
                <filter string="With Sales Rep" name="with_sales_rep" domain="[('sales_rep_id', '!=', False)]"/>
                <filter string="Without Sales Rep" name="without_sales_rep" domain="[('sales_rep_id', '=', False)]"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Current" name="current" 
                        domain="['|', ('date_end', '=', False), ('date_end', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Expired" name="expired" 
                        domain="[('date_end', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Product Line" name="product_line" domain="[]" context="{'group_by': 'product_line_id'}"/>
                    <filter string="Geographic Area" name="geo_area" domain="[]" context="{'group_by': 'geo_node_id'}"/>
                    <filter string="Sales Representative" name="sales_rep" domain="[]" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Assignment Type" name="coverage_type" domain="[]" context="{'group_by': 'coverage_type'}"/>
                    <filter string="Priority" name="priority" domain="[]" context="{'group_by': 'priority'}"/>
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Territory Assignment Action Window -->
    <record id="action_territory_assignment" model="ir.actions.act_window">
        <field name="name">Territory Assignments</field>
        <!-- <field name="res_model">territory.assignment</field> -->
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_territory_assignment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first territory assignment
            </p>
            <p>
                Define assignments for product lines in specific geographic areas.
                Assign sales representatives and set commission rates and targets.
            </p>
        </field>
    </record>

    <!-- Territory Assignment Menu -->
    <menuitem id="menu_territory_assignment" name="Territory Assignments" 
              parent="menu_sales_rep_root" 
              action="action_territory_assignment" 
              sequence="35"/>
</odoo>