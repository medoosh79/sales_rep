<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Field Inventory Tree View -->
    <record id="view_field_inventory_tree" model="ir.ui.view">
        <field name="name">field.inventory.tree</field>
        <field name="model">field.inventory</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Field Inventory" decoration-info="state == 'draft'" decoration-warning="state == 'confirmed'" decoration-success="state == 'completed'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="date"/>
                <field name="inventory_type"/>
                <field name="customer_id"/>
                <field name="total_quantity"/>
                <field name="total_value" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'confirmed'" decoration-success="state == 'completed'" decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Field Inventory Form View -->
    <record id="view_field_inventory_form" model="ir.ui.view">
        <field name="name">field.inventory.form</field>
        <field name="model">field.inventory</field>
        <field name="arch" type="xml">
            <form string="Field Inventory">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Start" class="btn-warning" invisible="state != 'confirmed'"/>
                    <button name="action_complete" type="object" string="Complete" class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['completed', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sales_rep_id" readonly="state != 'draft'"/>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="inventory_type" readonly="state != 'draft'"/>
                            <field name="customer_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="location_id" readonly="state != 'draft'"/>
                            <field name="destination_location_id" readonly="state != 'draft'"/>
                            <field name="total_quantity"/>
                            <field name="total_value" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Location Information">
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Inventory Lines">
                            <field name="inventory_line_ids" readonly="state in ['completed', 'cancelled']">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="subtotal" widget="monetary"/>
                                    <field name="lot_id"/>
                                    <field name="expiry_date"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Public notes..."/>
                            </group>
                            <group>
                                <field name="internal_notes" nolabel="1" placeholder="Internal notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Field Inventory Search View -->
    <record id="view_field_inventory_search" model="ir.ui.view">
        <field name="name">field.inventory.search</field>
        <field name="model">field.inventory</field>
        <field name="arch" type="xml">
            <search string="Field Inventory">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="customer_id"/>
                <field name="inventory_type"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Stock Check" name="stock_check" domain="[('inventory_type', '=', 'stock_check')]"/>
                <filter string="Delivery" name="delivery" domain="[('inventory_type', '=', 'delivery')]"/>
                <filter string="Return" name="return" domain="[('inventory_type', '=', 'return')]"/>
                <filter string="Transfer" name="transfer" domain="[('inventory_type', '=', 'transfer')]"/>
                <filter string="Adjustment" name="adjustment" domain="[('inventory_type', '=', 'adjustment')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('date', '=', context_today())]"/>
                <filter string="This Week" name="this_week" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01')), ('date', '&lt;=', (datetime.datetime.now().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Representative" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Inventory Type" name="group_type" context="{'group_by': 'inventory_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Field Inventory Kanban View -->
    <record id="view_field_inventory_kanban" model="ir.ui.view">
        <field name="name">field.inventory.kanban</field>
        <field name="model">field.inventory</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="date"/>
                <field name="inventory_type"/>
                <field name="total_value"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle"><field name="sales_rep_id"/></span>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="date"/><br/>
                                        <field name="inventory_type"/><br/>
                                        <strong>Value: <field name="total_value" widget="monetary"/></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Field Inventory Action -->
    <record id="action_field_inventory" model="ir.actions.act_window">
        <field name="name">Field Inventory</field>
        <field name="res_model">field.inventory</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="view_field_inventory_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No field inventory records found!
            </p>
            <p>
                Create field inventory records to track stock movements, deliveries, and adjustments in the field.
            </p>
        </field>
    </record>

    <!-- Field Inventory Report Tree View -->
    <record id="view_field_inventory_report_tree" model="ir.ui.view">
        <field name="name">field.inventory.report.tree</field>
        <field name="model">field.inventory.report</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Field Inventory Report" create="false" edit="false">
                <field name="date"/>
                <field name="sales_rep_id"/>
                <field name="inventory_type"/>
                <field name="state"/>
                <field name="product_id"/>
                <field name="product_category_id"/>
                <field name="total_quantity"/>
                <field name="total_value" widget="monetary"/>
                <field name="customer_id"/>
            </list>
        </field>
    </record>

    <!-- Field Inventory Report Search View -->
    <record id="view_field_inventory_report_search" model="ir.ui.view">
        <field name="name">field.inventory.report.search</field>
        <field name="model">field.inventory.report</field>
        <field name="arch" type="xml">
            <search string="Field Inventory Report">
                <field name="sales_rep_id"/>
                <field name="product_id"/>
                <field name="customer_id"/>
                <field name="inventory_type"/>
                <field name="state"/>
                <separator/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Deliveries" name="deliveries" domain="[('inventory_type', '=', 'delivery')]"/>
                <filter string="Returns" name="returns" domain="[('inventory_type', '=', 'return')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('date', '=', context_today())]"/>
                <filter string="This Week" name="this_week" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01')), ('date', '&lt;=', (datetime.datetime.now().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Representative" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Product Category" name="group_category" context="{'group_by': 'product_category_id'}"/>
                    <filter string="Inventory Type" name="group_type" context="{'group_by': 'inventory_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Field Inventory Report Action -->
    <record id="action_field_inventory_report" model="ir.actions.act_window">
        <field name="name">Field Inventory Report</field>
        <field name="res_model">field.inventory.report</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="view_field_inventory_report_search"/>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_field_inventory_root" name="Field Inventory" sequence="15"/>
    <menuitem id="menu_field_inventory" name="Field Inventory" parent="menu_field_inventory_root" action="action_field_inventory" sequence="10"/>
    <menuitem id="menu_field_inventory_report" name="Inventory Reports" parent="menu_field_inventory_root" action="action_field_inventory_report" sequence="20"/>

</odoo>