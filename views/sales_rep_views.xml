<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_rep_form" model="ir.ui.view">
        <field name="name">sales.rep.form</field>
        <field name="model">sales.rep</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_assignments" type="object" class="oe_stat_button" icon="fa-map">
                            <field name="assignment_count" widget="statinfo" string="Assignments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Name"/></h1>
                        <label for="code" class="oe_edit_only"/>
                        <h2><field name="code" placeholder="Code"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="employee_id"/>
                            <field name="job_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                    </group>
                    <group string="Commission Information">
                        <field name="commission_scheme_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Statistics" name="statistics">
                            <group>
                                <field name="total_sales" widget="monetary"/>
                                <field name="total_commission" widget="monetary"/>
                            </group>
                            <p class="text-muted">
                                Note: Statistics will be available in future versions.
                            </p>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sales_rep_tree" model="ir.ui.view">
        <field name="name">sales.rep.tree</field>
        <field name="model">sales.rep</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="employee_id"/>
                <field name="job_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="commission_scheme_id"/>
                <field name="assignment_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_sales_rep_search" model="ir.ui.view">
        <field name="name">sales.rep.search</field>
        <field name="model">sales.rep</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Sales Representative" filter_domain="['|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('email', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="employee_id"/>
                <field name="job_id"/>
                <field name="commission_scheme_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter string="Job Position" name="job" domain="[]" context="{'group_by': 'job_id'}"/>
                    <filter string="Commission Scheme" name="commission_scheme" domain="[]" context="{'group_by': 'commission_scheme_id'}"/>
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sales_rep" model="ir.actions.act_window">
        <field name="name">Sales Representatives</field>
        <!-- <field name="res_model">sales.rep</field> -->
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sales_rep_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sales representative
            </p>
            <p>
                Define your sales representatives to manage territories and commissions.
            </p>
        </field>
    </record>

    <menuitem id="menu_sales_rep_root" name="Sales Representatives" 
              web_icon="sales_rep_mgmt_pro,static/description/icon.svg" 
              sequence="80"/>
    
    <menuitem id="menu_sales_rep" name="Sales Representatives" 
              parent="menu_sales_rep_root" 
              action="action_sales_rep" 
              sequence="10"/>
</odoo>