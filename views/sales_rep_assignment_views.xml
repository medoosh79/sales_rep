<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sales Rep Assignment Form View -->
    <record id="view_sales_rep_assignment_form" model="ir.ui.view">
        <field name="name">sales.rep.assignment.form</field>
        <field name="model">sales.rep.assignment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sales_rep_id"/>
                            <field name="geo_node_id"/>
                            <field name="product_category_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="priority"/>
                            <field name="weight"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>

                    <group string="Commission Information">
                        <field name="commission_scheme_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Sales Rep Assignment Tree View -->
    <record id="view_sales_rep_assignment_tree" model="ir.ui.view">
        <field name="name">sales.rep.assignment.tree</field>
        <field name="model">sales.rep.assignment</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="sales_rep_id"/>
                <field name="geo_node_id"/>
                <field name="product_category_id"/>
                <field name="priority"/>
                <field name="weight"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Sales Rep Assignment Search View -->
    <record id="view_sales_rep_assignment_search" model="ir.ui.view">
        <field name="name">sales.rep.assignment.search</field>
        <field name="model">sales.rep.assignment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Assignment" filter_domain="[('name', 'ilike', self)]"/>
                <field name="sales_rep_id"/>
                <field name="geo_node_id"/>
                <field name="product_category_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Current" name="current" domain="['|', ('date_end', '>=', context_today().strftime('%Y-%m-%d')), ('date_end', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Representative" name="sales_rep" domain="[]" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Geographic Area" name="geo_node" domain="[]" context="{'group_by': 'geo_node_id'}"/>
                    <filter string="Product Category" name="product_category" domain="[]" context="{'group_by': 'product_category_id'}"/>
                    <filter string="Start Date" name="date_start" domain="[]" context="{'group_by': 'date_start'}"/>
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sales Rep Assignment Action Window -->
    <record id="action_sales_rep_assignment" model="ir.actions.act_window">
        <field name="name">Sales Rep Assignments</field>
        <field name="res_model">sales.rep.assignment</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sales_rep_assignment_search"/>
        <field name="context">{'search_default_active': 1, 'search_default_current': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sales rep assignment
            </p>
            <p>
                Assign sales representatives to geographic areas and product categories.
            </p>
        </field>
    </record>

    <!-- Sales Rep Assignment Menu -->
    <menuitem id="menu_sales_rep_assignment" name="Sales Rep Assignments" 
              parent="menu_sales_rep_root" 
              action="action_sales_rep_assignment" 
              sequence="20"/>
</odoo>