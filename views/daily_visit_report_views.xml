<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Daily Visit Report Tree View -->
        <record id="view_daily_visit_report_tree" model="ir.ui.view">
            <field name="name">daily.visit.report.tree</field>
            <field name="model">daily.visit.report</field>
            <field name="arch" type="xml">
                <list string="Daily Visit Reports" create="false" edit="false" delete="false">
                    <field name="date"/>
                    <field name="sales_rep_name"/>
                    <field name="total_visits"/>
                    <field name="completed_visits"/>
                    <field name="completion_rate" widget="percentage"/>
                    <field name="actual_revenue" widget="monetary"/>
                    <field name="revenue_achievement_rate" widget="percentage"/>
                    <field name="total_distance"/>
                    <field name="unique_customers"/>
                </list>
            </field>
        </record>
        
        <!-- Daily Visit Report Form View -->
        <record id="view_daily_visit_report_form" model="ir.ui.view">
            <field name="name">daily.visit.report.form</field>
            <field name="model">daily.visit.report</field>
            <field name="arch" type="xml">
                <form string="Daily Visit Report" create="false" edit="false" delete="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="date" readonly="1"/>
                                - <field name="sales_rep_name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Visit Statistics">
                                <field name="total_visits" readonly="1"/>
                                <field name="completed_visits" readonly="1"/>
                                <field name="cancelled_visits" readonly="1"/>
                                <field name="completion_rate" widget="percentage" readonly="1"/>
                                <field name="on_time_visits" readonly="1"/>
                                <field name="late_visits" readonly="1"/>
                                <field name="punctuality_rate" widget="percentage" readonly="1"/>
                            </group>
                            <group string="Financial Performance">
                                <field name="expected_revenue" widget="monetary" readonly="1"/>
                                <field name="actual_revenue" widget="monetary" readonly="1"/>
                                <field name="revenue_variance" widget="monetary" readonly="1"/>
                                <field name="revenue_achievement_rate" widget="percentage" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Time Management">
                                <field name="total_planned_time" readonly="1"/>
                                <field name="total_actual_time" readonly="1"/>
                                <field name="time_efficiency" widget="percentage" readonly="1"/>
                                <field name="average_visit_duration" readonly="1"/>
                            </group>
                            <group string="Travel &amp; Logistics">
                                <field name="total_distance" readonly="1"/>
                                <field name="total_travel_time" readonly="1"/>
                                <field name="fuel_cost" widget="monetary" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Customer Engagement">
                                <field name="unique_customers" readonly="1"/>
                                <field name="new_customers" readonly="1"/>
                                <field name="repeat_customers" readonly="1"/>
                            </group>
                            <group string="Visit Type Distribution">
                                <field name="sales_visits" readonly="1"/>
                                <field name="follow_up_visits" readonly="1"/>
                                <field name="support_visits" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Daily Visit Report Search View -->
        <record id="view_daily_visit_report_search" model="ir.ui.view">
            <field name="name">daily.visit.report.search</field>
            <field name="model">daily.visit.report</field>
            <field name="arch" type="xml">
                <search string="Daily Visit Reports">
                    <field name="sales_rep_name"/>
                    <field name="date"/>
                    <filter string="This Week" name="this_week" 
                            domain="[('date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" 
                            domain="[('date', '>=', context_today().strftime('%Y-%m-01'))]"/>
                    <filter string="High Performers" name="high_performers" 
                            domain="[('completion_rate', '>=', 80)]"/>
                    <filter string="Low Performers" name="low_performers" 
                            domain="[('completion_rate', '&lt;', 60)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Sales Representative" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                        <filter string="Week" name="group_week" context="{'group_by': 'date:week'}"/>
                        <filter string="Month" name="group_month" context="{'group_by': 'date:month'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Daily Visit Report Pivot View -->
        <record id="view_daily_visit_report_pivot" model="ir.ui.view">
            <field name="name">daily.visit.report.pivot</field>
            <field name="model">daily.visit.report</field>
            <field name="arch" type="xml">
                <pivot string="Daily Visit Analysis">
                    <field name="sales_rep_name" type="row"/>
                    <field name="date" type="col" interval="month"/>
                    <field name="total_visits" type="measure"/>
                    <field name="completed_visits" type="measure"/>
                    <field name="actual_revenue" type="measure"/>
                    <field name="completion_rate" type="measure"/>
                </pivot>
            </field>
        </record>
        
        <!-- Daily Visit Report Graph View -->
        <record id="view_daily_visit_report_graph" model="ir.ui.view">
            <field name="name">daily.visit.report.graph</field>
            <field name="model">daily.visit.report</field>
            <field name="arch" type="xml">
                <graph string="Daily Visit Trends" type="line">
                    <field name="date" type="row" interval="week"/>
                    <field name="completion_rate" type="measure"/>
                    <field name="revenue_achievement_rate" type="measure"/>
                </graph>
            </field>
        </record>
        
        <!-- Daily Visit Report Kanban Dashboard -->
        <record id="view_daily_visit_report_kanban" model="ir.ui.view">
            <field name="name">daily.visit.report.kanban</field>
            <field name="model">daily.visit.report</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="false" edit="false" delete="false">
                    <field name="total_visits"/>
                    <field name="completion_rate"/>
                    <field name="actual_revenue"/>
                    <field name="revenue_achievement_rate"/>
                    <field name="sales_rep_id"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary"><field name="sales_rep_id"/></div>
                                        <div class="text-muted"><field name="date"/></div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="badge badge-pill badge-primary">
                                                <field name="total_visits"/> Visits
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span class="badge badge-pill badge-info">
                                                <field name="completion_rate" widget="percentage"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <span>Revenue: </span>
                                            <field name="actual_revenue" widget="monetary"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Daily Visit Report Action -->
        <record id="action_daily_visit_report" model="ir.actions.act_window">
            <field name="name">Daily Visit Reports</field>
            <field name="res_model">daily.visit.report</field>
            <field name="view_mode">list,form,pivot,graph,kanban</field>
            <field name="view_id" ref="view_daily_visit_report_tree"/>
            <field name="search_view_id" ref="view_daily_visit_report_search"/>
            <field name="context">{
                'search_default_this_month': 1,
                'search_default_group_sales_rep': 1
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No daily visit reports found!
                </p>
                <p>
                    Daily visit reports are automatically generated from completed visit schedules.
                    Create and complete daily visit schedules to see reports here.
                </p>
            </field>
        </record>
        
        <!-- Performance Analytics Action -->
        <record id="action_visit_performance_analytics" model="ir.actions.act_window">
            <field name="name">Visit Performance Analytics</field>
            <field name="res_model">daily.visit.report</field>
            <field name="view_mode">graph,pivot,list</field>
            <field name="view_id" ref="view_daily_visit_report_graph"/>
            <field name="search_view_id" ref="view_daily_visit_report_search"/>
            <field name="context">{
                'search_default_this_month': 1,
                'graph_mode': 'line',
                'graph_measure': 'completion_rate',
                'graph_groupbys': ['date:week']
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Analyze your visit performance!
                </p>
                <p>
                    Track completion rates, revenue achievement, and other key metrics over time.
                </p>
            </field>
        </record>
        
        <!-- Menu Items -->
        <menuitem id="menu_daily_visit_reports"
                  name="Visit Reports"
                  parent="menu_sales_rep_root"
                  action="action_daily_visit_report"
                  sequence="30"/>
                  
        <menuitem id="menu_visit_analytics"
                  name="Performance Analytics"
                  parent="menu_sales_rep_root"
                  action="action_visit_performance_analytics"
                  sequence="31"/>
                  
    </data>
</odoo>