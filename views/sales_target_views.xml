<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sales Target Tree View -->
    <record id="sales_target_tree_view" model="ir.ui.view">
        <field name="name">sales.target.tree</field>
        <field name="model">sales.target</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Sales Targets" decoration-success="performance_rating=='excellent'" 
                  decoration-info="performance_rating=='good'" decoration-warning="performance_rating=='satisfactory'"
                  decoration-danger="performance_rating in ('needs_improvement', 'poor')">
                <field name="display_name"/>
                <field name="sales_rep_id"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="revenue_target" widget="monetary"/>
                <field name="revenue_achieved" widget="monetary"/>
                <field name="revenue_achievement_pct" widget="percentage"/>
                <field name="overall_achievement_pct" widget="percentage"/>
                <field name="performance_rating"/>
                <field name="state" widget="badge" decoration-success="state=='active'" 
                       decoration-info="state=='completed'" decoration-muted="state=='cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Sales Target Form View -->
    <record id="sales_target_form_view" model="ir.ui.view">
        <field name="name">sales.target.form</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <form string="Sales Target">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_complete" string="Complete" type="object" 
                            class="btn-success" invisible="state != 'active'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            class="btn-secondary" invisible="state in ('completed', 'cancelled')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Add smart buttons here if needed -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Target Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info">
                            <field name="sales_rep_id" options="{'no_create': True}"/>
                            <field name="period_type"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="active"/>
                        </group>
                        <group name="performance">
                            <field name="overall_achievement_pct" widget="percentage"/>
                            <field name="performance_rating" widget="badge"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Targets and Achievements" name="targets">
                            <group>
                                <group string="Revenue">
                                    <field name="revenue_target" widget="monetary"/>
                                    <field name="revenue_achieved" widget="monetary"/>
                                    <field name="revenue_achievement_pct" widget="percentage"/>
                                </group>
                                <group string="Visits">
                                    <field name="visits_target"/>
                                    <field name="visits_achieved"/>
                                    <field name="visits_achievement_pct" widget="percentage"/>
                                </group>
                            </group>
                            <group>
                                <group string="New Customers">
                                    <field name="new_customers_target"/>
                                    <field name="new_customers_achieved"/>
                                    <field name="new_customers_achievement_pct" widget="percentage"/>
                                </group>
                                <group string="Orders">
                                    <field name="orders_target"/>
                                    <field name="orders_achieved"/>
                                    <field name="orders_achievement_pct" widget="percentage"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Custom KPIs" name="kpis">
                            <field name="kpi_line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="kpi_type"/>
                                    <field name="target_value"/>
                                    <field name="achieved_value"/>
                                    <field name="achievement_pct" widget="percentage"/>
                                    <field name="weight"/>
                                    <field name="status" widget="badge"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="kpi_type"/>
                                        <field name="target_value"/>
                                        <field name="weight"/>
                                    </group>
                                    <group>
                                        <field name="achieved_value"/>
                                        <field name="achievement_pct" widget="percentage"/>
                                        <field name="status" widget="badge"/>
                                    </group>
                                    <field name="description"/>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes and comments..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Sales Target Search View -->
    <record id="sales_target_search_view" model="ir.ui.view">
        <field name="name">sales.target.search</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <search string="Sales Targets">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active Targets" name="active_targets" domain="[('state', '=', 'active')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Excellent Performance" name="excellent" domain="[('performance_rating', '=', 'excellent')]"/>
                <filter string="Good Performance" name="good" domain="[('performance_rating', '=', 'good')]"/>
                <filter string="Needs Improvement" name="needs_improvement" domain="[('performance_rating', 'in', ('needs_improvement', 'poor'))]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('period_start', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('period_start', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Quarter" name="this_quarter" 
                        domain="[('period_start', '&gt;=', (context_today() - relativedelta(day=1, month=((context_today().month-1)//3)*3+1)).strftime('%Y-%m-%d')),
                                ('period_start', '&lt;', (context_today() + relativedelta(months=3-(context_today().month-1)%3, day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Representative" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Period Type" name="group_period_type" context="{'group_by': 'period_type'}"/>
                    <filter string="Performance Rating" name="group_performance" context="{'group_by': 'performance_rating'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Period Start" name="group_period_start" context="{'group_by': 'period_start'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Sales Target Kanban View -->
    <record id="sales_target_kanban_view" model="ir.ui.view">
        <field name="name">sales.target.kanban</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="performance_rating">
                <field name="id"/>
                <field name="display_name"/>
                <field name="sales_rep_id"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="overall_achievement_pct"/>
                <field name="performance_rating"/>
                <field name="state"/>
                <field name="revenue_target"/>
                <field name="revenue_achieved"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="fa fa-user"/> <field name="sales_rep_id"/>
                                        </div>
                                        <div class="col-6">
                                            <span class="fa fa-calendar"/> <field name="period_start"/> - <field name="period_end"/>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" 
                                                     t-attf-style="width: #{record.overall_achievement_pct.raw_value}%"
                                                     t-attf-aria-valuenow="#{record.overall_achievement_pct.raw_value}"
                                                     aria-valuemin="0" aria-valuemax="100">
                                                    <t t-esc="Math.round(record.overall_achievement_pct.raw_value)"/>%
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-6">
                                            <small>Target: <field name="revenue_target" widget="monetary"/></small>
                                        </div>
                                        <div class="col-6">
                                            <small>Achieved: <field name="revenue_achieved" widget="monetary"/></small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'secondary', 'active': 'success', 'completed': 'info', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sales Target Action -->
    <record id="action_sales_target" model="ir.actions.act_window">
        <field name="name">Sales Targets</field>
        <field name="res_model">sales.target</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sales target!
            </p>
            <p>
                Set targets for your sales representatives to track their performance
                and motivate them to achieve better results.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_sales_targets" 
              name="Sales Targets" 
              parent="menu_sales_rep_mgmt_root" 
              action="action_sales_target" 
              sequence="30"/>

    <!-- Sales Target Dashboard Action -->
    <record id="action_sales_target_dashboard" model="ir.actions.act_window">
        <field name="name">Target Dashboard</field>
        <field name="res_model">sales.target</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active_targets': 1, 'search_default_this_month': 1}</field>
        <field name="domain">[('state', '=', 'active')]</field>
    </record>

    <menuitem id="menu_sales_target_dashboard" 
              name="Target Dashboard" 
              parent="menu_sales_rep_mgmt_root" 
              action="action_sales_target_dashboard" 
              sequence="25"/>
</odoo>