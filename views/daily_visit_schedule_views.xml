<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- Daily Visit Schedule List View -->
    <record id="view_daily_visit_schedule_list" model="ir.ui.view">
        <field name="name">daily.visit.schedule.list</field>
        <field name="model">daily.visit.schedule</field>
        <field name="arch" type="xml">
            <list string="Daily Visit Schedules">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="visit_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Daily Visit Schedule Form View -->
    <record id="view_daily_visit_schedule_form" model="ir.ui.view">
        <field name="name">daily.visit.schedule.form</field>
        <field name="model">daily.visit.schedule</field>
        <field name="arch" type="xml">
            <form string="Daily Visit Schedule">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" type="object" string="Start" class="btn-success" invisible="state != 'confirmed'"/>
                    <button name="action_complete" type="object" string="Complete" class="btn-success" invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sales_rep_id"/>
                            <field name="visit_date"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Public notes..."/>
                                <field name="internal_notes" nolabel="1" placeholder="Internal notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Daily Visit Schedule Action -->
    <record id="action_daily_visit_schedule" model="ir.actions.act_window">
        <field name="name">Daily Visit Schedules</field>
        <field name="res_model">daily.visit.schedule</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_daily_visit_schedule_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first daily visit schedule!
            </p>
            <p>
                Plan and manage your daily customer visits efficiently.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_daily_visit_schedule"
              name="Daily Schedules"
              parent="menu_sales_rep_root"
              action="action_daily_visit_schedule"
              sequence="30"/>

</data>
</odoo>