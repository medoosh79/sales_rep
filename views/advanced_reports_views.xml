    <menuitem id="menu_visit_summary_report" name="Visit Summary" parent="menu_advanced_reports" action="action_visit_summary_report" sequence="60"/>
    <menuitem id="menu_kpi_dashboard_report" name="KPI Dashboard" parent="menu_advanced_reports" action="action_kpi_dashboard_report" sequence="70"/>
