<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Advanced Report Wizard Form View -->
    <record id="view_advanced_report_wizard_form" model="ir.ui.view">
        <field name="name">advanced.report.wizard.form</field>
        <field name="model">advanced.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Advanced Report Generator">
                <sheet>
                    <group>
                        <group>
                            <field name="report_type" widget="radio"/>
                            <field name="export_format" widget="radio"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="sales_rep_ids" widget="many2many_tags"/>
                            <field name="territory_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group string="Report Options">
                        <group>
                            <field name="include_charts"/>
                            <field name="include_summary"/>
                        </group>
                        <group>
                            <field name="group_by_territory"/>
                            <field name="group_by_month"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Advanced Report Wizard Action -->
    <record id="action_advanced_report_wizard" model="ir.actions.act_window">
        <field name="name">Advanced Report Generator</field>
        <field name="res_model">advanced.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_advanced_report_wizard_form"/>
    </record>

    <!-- Sales Performance Report Action -->
    <record id="action_sales_performance_report" model="ir.actions.act_window">
        <field name="name">Sales Performance Report</field>
        <field name="res_model">advanced.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_advanced_report_wizard_form"/>
        <field name="context">{'default_report_type': 'sales_performance'}</field>
    </record>

    <!-- Commission Summary Report Action -->
    <record id="action_commission_summary_report" model="ir.actions.act_window">
