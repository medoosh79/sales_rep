<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Expense Category Views -->
    <record id="view_expense_category_tree" model="ir.ui.view">
        <field name="name">expense.category.tree</field>
        <field name="model">expense.category</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Expense Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="daily_limit"/>
                <field name="monthly_limit"/>
                <field name="requires_receipt"/>
                <field name="requires_approval"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_expense_category_form" model="ir.ui.view">
        <field name="name">expense.category.form</field>
        <field name="model">expense.category</field>
        <field name="arch" type="xml">
            <form string="Expense Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="daily_limit"/>
                            <field name="monthly_limit"/>
                            <field name="requires_receipt"/>
                            <field name="requires_approval"/>
                        </group>
                    </group>
                    <group>
                        <field name="account_id"/>
                    </group>
                    <group>
                        <field name="description" placeholder="Category description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sales Rep Expense Views -->
    <record id="view_sales_rep_expense_tree" model="ir.ui.view">
        <field name="name">sales.rep.expense.tree</field>
        <field name="model">sales.rep.expense</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Sales Rep Expenses" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'" decoration-muted="state=='paid'">
                <field name="name"/>
                <field name="date"/>
                <field name="sales_rep_id"/>
                <field name="category_id"/>
                <field name="description"/>
                <field name="amount" sum="Total Amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="has_receipt"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'" decoration-muted="state=='paid'"/>
            </list>
        </field>
    </record>

    <record id="view_sales_rep_expense_form" model="ir.ui.view">
        <field name="name">sales.rep.expense.form</field>
        <field name="model">sales.rep.expense</field>
        <field name="arch" type="xml">
            <form string="Sales Rep Expense">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'submitted'" groups="sales_team.group_sale_manager"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state != 'submitted'" groups="sales_team.group_sale_manager"/>
                    <button name="action_mark_paid" string="Mark as Paid" type="object" class="oe_highlight" invisible="state != 'approved'" groups="account.group_account_user"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state != 'rejected'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sales_rep_id" options="{'no_create': True}"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="date"/>
                            <field name="category_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="location"/>
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="visit_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Expense description..."/>
                    </group>
                    <notebook>
                        <page string="Receipts" name="receipts">
                            <field name="receipt_attachment_ids" widget="many2many_binary" class="oe_inline"/>
                            <field name="has_receipt" invisible="1"/>
                        </page>
                        <page string="Approval Details" name="approval" invisible="state not in ['submitted','approved','rejected','paid']">
                            <group>
                                <group>
                                    <field name="submitted_date" readonly="1"/>
                                    <field name="approved_date" readonly="1" invisible="state not in ['approved','paid']"/>
                                    <field name="approved_by" readonly="1" invisible="state not in ['approved','paid']"/>
                                </group>
                                <group>
                                    <field name="rejected_date" readonly="1" invisible="state != 'rejected'"/>
                                    <field name="rejected_by" readonly="1" invisible="state != 'rejected'"/>
                                    <field name="rejection_reason" readonly="1" invisible="state != 'rejected'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Payment Details" name="payment" invisible="state not in ['approved','paid']">
                            <group>
                                <group>
                                    <field name="payment_date"/>
                                    <field name="payment_method"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sales_rep_expense_kanban" model="ir.ui.view">
        <field name="name">sales.rep.expense.kanban</field>
        <field name="model">sales.rep.expense</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="category_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="state"/>
                <field name="has_receipt"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <small><field name="sales_rep_id"/></small>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-pill" t-attf-class="badge-#{record.state.raw_value == 'approved' ? 'success' : record.state.raw_value == 'rejected' ? 'danger' : 'info'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="category_id"/><br/>
                                    <strong><field name="amount" widget="monetary"/></strong><br/>
                                    <field name="date"/>
                                    <t t-if="record.has_receipt.raw_value">
                                        <i class="fa fa-paperclip" title="Has Receipt"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_sales_rep_expense_search" model="ir.ui.view">
        <field name="name">sales.rep.expense.search</field>
        <field name="model">sales.rep.expense</field>
        <field name="arch" type="xml">
            <search string="Search Expenses">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="category_id"/>
                <field name="description"/>
                <field name="customer_id"/>
                <separator/>
                <filter string="My Expenses" name="my_expenses" domain="[('sales_rep_id.user_id', '=', uid)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="Has Receipt" name="has_receipt" domain="[('has_receipt', '=', True)]"/>
                <filter string="No Receipt" name="no_receipt" domain="[('has_receipt', '=', False)]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month" domain="[('date', '>=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Rep" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Expense Report Views -->
    <record id="view_expense_report_tree" model="ir.ui.view">
        <field name="name">expense.report.tree</field>
        <field name="model">expense.report</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Expense Reports" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'" decoration-muted="state=='paid'">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="expense_count"/>
                <field name="total_amount" sum="Total Amount"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'" decoration-muted="state=='paid'"/>
            </list>
        </field>
    </record>

    <record id="view_expense_report_form" model="ir.ui.view">
        <field name="name">expense.report.form</field>
        <field name="model">expense.report</field>
        <field name="arch" type="xml">
            <form string="Expense Report">
                <header>
                    <button name="action_load_expenses" string="Load Expenses" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'submitted'" groups="sales_team.group_sale_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sales_rep_id" options="{'no_create': True}"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="expense_count"/>
                            <field name="total_amount"/>
                            <field name="submitted_date" readonly="1" invisible="state not in ['submitted','approved','rejected','paid']"/>
                            <field name="approved_date" readonly="1" invisible="state not in ['approved','paid']"/>
                            <field name="approved_by" readonly="1" invisible="state not in ['approved','paid']"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Expenses" name="expenses">
                            <field name="expense_ids" readonly="state != 'draft'">
                                <list>
                                    <field name="date"/>
                                    <field name="category_id"/>
                                    <field name="description"/>
                                    <field name="amount"/>
                                    <field name="has_receipt"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Report notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Cost Analysis Views -->
    <record id="view_cost_analysis_tree" model="ir.ui.view">
        <field name="name">cost.analysis.tree</field>
        <field name="model">cost.analysis</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Cost Analysis" create="false" edit="false" delete="false">
                <field name="sales_rep_id"/>
                <field name="date"/>
                <field name="category_id"/>
                <field name="territory_id"/>
                <field name="expense_count"/>
                <field name="total_amount" sum="Total Amount"/>
                <field name="avg_amount" avg="Average Amount"/>
            </list>
        </field>
    </record>

    <record id="view_cost_analysis_search" model="ir.ui.view">
        <field name="name">cost.analysis.search</field>
        <field name="model">cost.analysis</field>
        <field name="arch" type="xml">
            <search string="Search Cost Analysis">
                <field name="sales_rep_id"/>
                <field name="category_id"/>
                <field name="territory_id"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month" domain="[('date', '>=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Rep" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Territory" name="group_territory" context="{'group_by': 'territory_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_expense_category" model="ir.actions.act_window">
        <field name="name">Expense Categories</field>
        <field name="res_model">expense.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense category!
            </p>
            <p>
                Expense categories help organize and control expenses with limits and approval rules.
            </p>
        </field>
    </record>

    <record id="action_sales_rep_expense" model="ir.actions.act_window">
        <field name="name">Sales Rep Expenses</field>
        <field name="res_model">sales.rep.expense</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_my_expenses': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense!
            </p>
            <p>
                Track and manage sales representative expenses with approval workflows.
            </p>
        </field>
    </record>

    <record id="action_expense_report" model="ir.actions.act_window">
        <field name="name">Expense Reports</field>
        <field name="res_model">expense.report</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first expense report!
            </p>
            <p>
                Generate periodic expense reports for reimbursement and analysis.
            </p>
        </field>
    </record>

    <record id="action_cost_analysis" model="ir.actions.act_window">
        <field name="name">Cost Analysis</field>
        <field name="res_model">cost.analysis</field>
        <field name="view_mode">list</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No cost data available!
            </p>
            <p>
                Cost analysis shows expense patterns and trends across sales representatives.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_expense_management" name="Expense Management" parent="menu_sales_rep_mgmt_pro" sequence="60"/>
    
    <menuitem id="menu_expense_category" name="Expense Categories" parent="menu_expense_management" action="action_expense_category" sequence="10"/>
    <menuitem id="menu_sales_rep_expense" name="Expenses" parent="menu_expense_management" action="action_sales_rep_expense" sequence="20"/>
    <menuitem id="menu_expense_report" name="Expense Reports" parent="menu_expense_management" action="action_expense_report" sequence="30"/>
    <menuitem id="menu_cost_analysis" name="Cost Analysis" parent="menu_expense_management" action="action_cost_analysis" sequence="40"/>

</odoo>