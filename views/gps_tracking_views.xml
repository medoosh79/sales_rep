<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gps_tracking_tree" model="ir.ui.view">
        <field name="name">gps.tracking.tree</field>
        <field name="model">gps.tracking</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="GPS Tracking Records" decoration-info="status=='active'" decoration-muted="status=='inactive'">
                <field name="sales_rep_id"/>
                <field name="timestamp"/>
                <field name="tracking_type"/>
                <field name="address"/>
                <field name="customer_id"/>
                <field name="distance_to_customer"/>
                <field name="speed"/>
                <field name="is_in_territory"/>
                <field name="is_valid"/>
            </list>
        </field>
    </record>

    <record id="view_gps_tracking_form" model="ir.ui.view">
        <field name="name">gps.tracking.form</field>
        <field name="model">gps.tracking</field>
        <field name="arch" type="xml">
            <form string="GPS Tracking">
                <sheet>
                    <group>
                        <group>
                            <field name="sales_rep_id"/>
                            <field name="timestamp"/>
                            <field name="tracking_type"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="customer_id"/>
                            <field name="territory_id"/>
                            <field name="distance_to_customer"/>
                            <field name="speed"/>
                            <field name="is_in_territory"/>
                            <field name="is_valid"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gps_tracking" model="ir.actions.act_window">
        <field name="name">GPS Tracking</field>
        <field name="res_model">gps.tracking</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_gps_tracking_root" name="GPS Tracking" sequence="10"/>
    <menuitem id="menu_gps_tracking" name="GPS Tracking" parent="menu_gps_tracking_root" action="action_gps_tracking" sequence="10"/>

</odoo>