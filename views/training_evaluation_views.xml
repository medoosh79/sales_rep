<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Category Views -->
    <record id="view_training_category_tree" model="ir.ui.view">
        <field name="name">training.category.tree</field>
        <field name="model">training.category</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Training Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="course_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_training_category_form" model="ir.ui.view">
        <field name="name">training.category.form</field>
        <field name="model">training.category</field>
        <field name="arch" type="xml">
            <form string="Training Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                        <button name="action_view_courses" class="oe_stat_button" type="object" icon="fa-graduation-cap">
                            <field name="course_count" widget="statinfo" string="Courses"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Category description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Training Course Views -->
    <record id="view_training_course_tree" model="ir.ui.view">
        <field name="name">training.course.tree</field>
        <field name="model">training.course</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Training Courses" decoration-info="state=='scheduled'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="duration_hours" widget="float_time"/>
                <field name="difficulty_level"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="enrollment_count"/>
                <field name="completion_rate" widget="percentage"/>
                <field name="state" widget="badge" decoration-info="state=='scheduled'" decoration-success="state=='completed'"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_training_course_form" model="ir.ui.view">
        <field name="name">training.course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Training Course">
                <header>
                    <button name="action_schedule" string="Schedule" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start" type="object" class="oe_highlight" invisible="state != 'scheduled'"/>
                    <button name="action_complete" string="Complete" type="object" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ['completed', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                        <button name="action_view_enrollments" class="oe_stat_button" type="object" icon="fa-users">
                            <field name="enrollment_count" widget="statinfo" string="Enrollments"/>
                        </button>
                        <button name="action_view_completion_rate" class="oe_stat_button" type="object" icon="fa-percent">
                            <field name="completion_rate" widget="statinfo" string="Completion Rate"/>
                        </button>
                        <button name="action_view_average_score" class="oe_stat_button" type="object" icon="fa-star">
                            <field name="average_score" widget="statinfo" string="Avg Score"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Course Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Course Information">
                            <field name="code"/>
                            <field name="category_id" options="{'no_create': True}"/>
                            <field name="instructor_id" options="{'no_create': True}"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Course Details">
                            <field name="duration_hours" widget="float_time"/>
                            <field name="difficulty_level"/>
                            <field name="max_participants"/>
                            <field name="passing_score" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <group string="Schedule">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group string="Settings">
                            <field name="is_mandatory"/>
                            <field name="certification_required"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Course description..."/>
                        </page>
                        <page string="Learning Objectives" name="objectives">
                            <field name="learning_objectives" placeholder="Learning objectives..."/>
                        </page>
                        <page string="Course Materials" name="materials">
                            <field name="course_materials" placeholder="Course materials and resources..."/>
                        </page>
                        <page string="Prerequisites" name="prerequisites">
                            <field name="prerequisite_course_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_training_course_kanban" model="ir.ui.view">
        <field name="name">training.course.kanban</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <field name="duration_hours"/>
                <field name="difficulty_level"/>
                <field name="enrollment_count"/>
                <field name="completion_rate"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small><field name="code"/></small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="category_id"/><br/>
                                    <field name="instructor_id"/><br/>
                                    <span class="badge badge-pill badge-info">
                                        <field name="difficulty_level"/>
                                    </span>
                                    <br/>
                                    <strong><field name="duration_hours" widget="float_time"/> hours</strong>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span><field name="enrollment_count"/> enrolled</span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="completion_rate" widget="progressbar" title="Completion Rate"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Training Enrollment Views -->
    <record id="view_training_enrollment_tree" model="ir.ui.view">
        <field name="name">training.enrollment.tree</field>
        <field name="model">training.enrollment</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Training Enrollments" decoration-info="status=='in_progress'" decoration-success="status=='completed'" decoration-danger="status=='failed'">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="course_id"/>
                <field name="enrollment_date"/>
                <field name="start_date"/>
                <field name="completion_date"/>
                <field name="progress_percentage" widget="progressbar"/>
                <field name="final_score" widget="percentage"/>
                <field name="passed" widget="boolean_toggle"/>
                <field name="status" widget="badge" decoration-info="status=='in_progress'" decoration-success="status=='completed'"/>
            </list>
        </field>
    </record>

    <record id="view_training_enrollment_form" model="ir.ui.view">
        <field name="name">training.enrollment.form</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <form string="Training Enrollment">
                <header>
                    <button name="action_start" string="Start" type="object" class="oe_highlight" invisible="status != 'enrolled'"/>
                    <button name="action_complete" string="Complete" type="object" class="oe_highlight" invisible="status != 'in_progress'"/>
                    <button name="action_fail" string="Mark as Failed" type="object" invisible="status in ['completed', 'failed', 'cancelled']"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="status in ['completed', 'cancelled']"/>
                    <field name="status" widget="statusbar" statusbar_visible="enrolled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Enrollment Information">
                            <field name="sales_rep_id" options="{'no_create': True}"/>
                            <field name="course_id" options="{'no_create': True}"/>
                            <field name="enrollment_date"/>
                            <field name="deadline"/>
                        </group>
                        <group string="Progress">
                            <field name="start_date"/>
                            <field name="completion_date"/>
                            <field name="progress_percentage" widget="progressbar"/>
                            <field name="attendance_hours" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <group string="Evaluation">
                            <field name="final_score" widget="percentage"/>
                            <field name="passed" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" placeholder="General notes..."/>
                                <field name="instructor_feedback" placeholder="Instructor feedback..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Sales Rep Evaluation Views -->
    <record id="view_sales_rep_evaluation_tree" model="ir.ui.view">
        <field name="name">sales.rep.evaluation.tree</field>
        <field name="model">sales.rep.evaluation</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Sales Rep Evaluations" decoration-info="state=='submitted'" decoration-success="state=='approved'">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="evaluator_id"/>
                <field name="evaluation_date"/>
                <field name="evaluation_type"/>
                <field name="overall_score" widget="percentage"/>
                <field name="performance_rating" widget="badge" decoration-success="performance_rating=='excellent'" decoration-info="performance_rating=='good'"/>
                <field name="state" widget="badge" decoration-info="state=='submitted'" decoration-success="state=='approved'"/>
            </list>
        </field>
    </record>

    <record id="view_sales_rep_evaluation_form" model="ir.ui.view">
        <field name="name">sales.rep.evaluation.form</field>
        <field name="model">sales.rep.evaluation</field>
        <field name="arch" type="xml">
            <form string="Sales Rep Evaluation">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_review" string="Review" type="object" invisible="state != 'submitted'"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'reviewed'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,reviewed,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Evaluation Information">
                            <field name="sales_rep_id" options="{'no_create': True}"/>
                            <field name="evaluator_id" options="{'no_create': True}"/>
                            <field name="evaluation_date"/>
                            <field name="evaluation_type"/>
                        </group>
                        <group string="Evaluation Period">
                            <field name="evaluation_period_start"/>
                            <field name="evaluation_period_end"/>
                        </group>
                    </group>
                    <group string="Performance Scores">
                        <group>
                            <field name="sales_performance_score" widget="percentage"/>
                            <field name="customer_satisfaction_score" widget="percentage"/>
                            <field name="product_knowledge_score" widget="percentage"/>
                        </group>
                        <group>
                            <field name="communication_skills_score" widget="percentage"/>
                            <field name="teamwork_score" widget="percentage"/>
                            <field name="punctuality_score" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <group string="Overall Assessment">
                            <field name="overall_score" widget="percentage" readonly="1"/>
                            <field name="performance_rating" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Goals &amp; Objectives" name="goals">
                            <group>
                                <field name="goals_achieved" placeholder="Goals achieved during this period..."/>
                                <field name="goals_missed" placeholder="Goals missed and reasons..."/>
                                <field name="improvement_areas" placeholder="Areas that need improvement..."/>
                                <field name="development_plan" placeholder="Development plan for next period..."/>
                            </group>
                        </page>
                        <page string="Comments" name="comments">
                            <group>
                                <field name="evaluator_comments" placeholder="Evaluator comments..."/>
                                <field name="employee_comments" placeholder="Employee comments and feedback..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Sales Rep Certification Views -->
    <record id="view_sales_rep_certification_tree" model="ir.ui.view">
        <field name="name">sales.rep.certification.tree</field>
        <field name="model">sales.rep.certification</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Sales Rep Certifications" decoration-muted="is_expired==True">
                <field name="certificate_number"/>
                <field name="sales_rep_id"/>
                <field name="course_id"/>
                <field name="certification_date"/>
                <field name="valid_until"/>
                <field name="score" widget="percentage"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="is_expired" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_sales_rep_certification_form" model="ir.ui.view">
        <field name="name">sales.rep.certification.form</field>
        <field name="model">sales.rep.certification</field>
        <field name="arch" type="xml">
            <form string="Sales Rep Certification">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Certification Information">
                            <field name="certificate_number" readonly="1"/>
                            <field name="sales_rep_id" readonly="1"/>
                            <field name="course_id" readonly="1"/>
                            <field name="enrollment_id" readonly="1"/>
                        </group>
                        <group string="Certification Details">
                            <field name="certification_date"/>
                            <field name="valid_until"/>
                            <field name="score" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="is_active" widget="boolean_toggle"/>
                            <field name="is_expired" widget="boolean_toggle" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Training Analytics Views -->
    <record id="view_training_analytics_tree" model="ir.ui.view">
        <field name="name">training.analytics.tree</field>
        <field name="model">training.analytics</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Training Analytics" create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="sales_rep_id"/>
                <field name="course_id"/>
                <field name="category_id"/>
                <field name="territory_id"/>
                <field name="enrollment_count" sum="Total Enrollments"/>
                <field name="completion_count" sum="Total Completions"/>
                <field name="certification_count" sum="Total Certifications"/>
                <field name="total_training_hours" sum="Total Hours" widget="float_time"/>
                <field name="average_score" avg="Avg Score" widget="percentage"/>
                <field name="completion_rate" avg="Avg Completion Rate" widget="percentage"/>
            </list>
        </field>
    </record>

    <!-- Search Views -->
    <record id="view_training_course_search" model="ir.ui.view">
        <field name="name">training.course.search</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <search string="Search Training Courses">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="instructor_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Mandatory" name="mandatory" domain="[('is_mandatory', '=', True)]"/>
                <filter string="Certification Required" name="certification" domain="[('certification_required', '=', True)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Instructor" name="group_instructor" context="{'group_by': 'instructor_id'}"/>
                    <filter string="Difficulty" name="group_difficulty" context="{'group_by': 'difficulty_level'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_training_enrollment_search" model="ir.ui.view">
        <field name="name">training.enrollment.search</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <search string="Search Training Enrollments">
                <field name="name"/>
                <field name="sales_rep_id"/>
                <field name="course_id"/>
                <separator/>
                <filter string="My Enrollments" name="my_enrollments" domain="[('sales_rep_id.user_id', '=', uid)]"/>
                <filter string="Passed" name="passed" domain="[('passed', '=', True)]"/>
                <filter string="Failed" name="failed" domain="[('passed', '=', False), ('status', '=', 'completed')]"/>
                <separator/>
                <filter string="Enrolled" name="enrolled" domain="[('status', '=', 'enrolled')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Sales Rep" name="group_sales_rep" context="{'group_by': 'sales_rep_id'}"/>
                    <filter string="Course" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Enrollment Date" name="group_date" context="{'group_by': 'enrollment_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_training_category" model="ir.actions.act_window">
        <field name="name">Training Categories</field>
        <field name="res_model">training.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first training category!
            </p>
            <p>
                Training categories help organize your courses by subject or department.
            </p>
        </field>
    </record>

    <record id="action_training_course" model="ir.actions.act_window">
        <field name="name">Training Courses</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first training course!
            </p>
            <p>
                Design comprehensive training programs to develop your sales team's skills.
            </p>
        </field>
    </record>

    <record id="action_training_enrollment" model="ir.actions.act_window">
        <field name="name">Training Enrollments</field>
        <field name="res_model">training.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_enrollments': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No training enrollments found!
            </p>
            <p>
                Enroll sales representatives in training courses to track their progress.
            </p>
        </field>
    </record>

    <record id="action_sales_rep_evaluation" model="ir.actions.act_window">
        <field name="name">Sales Rep Evaluations</field>
        <field name="res_model">sales.rep.evaluation</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first evaluation!
            </p>
            <p>
                Conduct regular performance evaluations to track and improve sales rep performance.
            </p>
        </field>
    </record>

    <record id="action_sales_rep_certification" model="ir.actions.act_window">
        <field name="name">Sales Rep Certifications</field>
        <field name="res_model">sales.rep.certification</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No certifications found!
            </p>
            <p>
                Track certifications earned by sales representatives through training programs.
            </p>
        </field>
    </record>

    <record id="action_training_analytics" model="ir.actions.act_window">
        <field name="name">Training Analytics</field>
        <field name="res_model">training.analytics</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No training data available!
            </p>
            <p>
                Analytics show training performance metrics and completion trends.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_training_evaluation" name="Training &amp; Evaluation" parent="menu_sales_rep_mgmt_pro" sequence="80"/>
    
    <menuitem id="menu_training_course" name="Training Courses" parent="menu_training_evaluation" action="action_training_course" sequence="10"/>
    <menuitem id="menu_training_enrollment" name="Enrollments" parent="menu_training_evaluation" action="action_training_enrollment" sequence="20"/>
    <menuitem id="menu_sales_rep_evaluation" name="Evaluations" parent="menu_training_evaluation" action="action_sales_rep_evaluation" sequence="30"/>
